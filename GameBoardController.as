package{	import flash.events.Event;	/**	 * Controller	 */	public class GameBoardController	{		private var _model:GameBoardModel;	// Model				/**		 * Constructor for the controller. Sets reference for model.		 *		 * @param	model	Data model for the game.		 */		public function GameBoardController(model:GameBoardModel)		{			_model = model;			super();		}				/**		 * Initializes the model.		 *		 * @param	nRow	Number of rows for the game.		 * @param	nCol	Number of columns for the game.		 * @param	nPieces	Number of hidden items/pieces for the game.		 */		public function setup(nRow:int, nCol:int, nPieces:int):void		{			_model.initData(nRow, nCol, nPieces);		}				/**		 * Selects the space clicked on the view.		 *		 * @param	nRow 	Row selected.		 * @param	nCol	Column selected.		 */		public function updateSpace(nRow:int, nCol:int):void		{			_model.selectSpace(nRow, nCol);		}				/**		 * Resets the game board.		 */		public function reset():void		{			_model.reset();		}	}}